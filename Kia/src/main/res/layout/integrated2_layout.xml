<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFF">

    <View android:id="@+id/shadow"
          android:layout_width="match_parent"
          android:layout_height="7dp"
          android:background="@drawable/shadow"
          android:visibility="invisible"/>

    <com.df.library.util.MyScrollView
         android:id="@+id/root"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="-7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout android:id="@+id/floodTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@string/flood" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#C74810"/>

                <TableRow  android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cigarLighter"
                        android:layout_weight="2"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner
                        android:id="@+id/cigarLighter_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"
                        android:tag="cigarLighter"/>
                </TableRow>
                <TableRow  android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/seatBelts"
                        android:layout_weight="2"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner
                        android:id="@+id/seatBelts_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"
                        android:tag="seatBelts"/>
                </TableRow>
                <TableRow  android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ashtray"
                        android:layout_weight="2"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner
                        android:id="@+id/ashtray_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"
                        android:tag="ashtray"/>
                </TableRow>
                <TableRow  android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/rearSeats"
                        android:layout_weight="2"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner
                        android:id="@+id/rearSeats_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"
                        android:tag="rearSeats"/>
                </TableRow>
                <TableRow  android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/spareTireGroove"
                        android:layout_weight="2"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner
                        android:id="@+id/spareTireGroove_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"
                        android:tag="spareTireGroove"/>
                </TableRow>
                <TableRow  android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/trunkCorner"
                        android:layout_weight="2"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner
                        android:id="@+id/trunkCorner_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"
                        android:tag="trunkCorner"/>
                </TableRow>
                <TableRow  android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/audioHorn"
                        android:layout_weight="2"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner
                        android:id="@+id/audioHorn_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"
                        android:tag="audio"/>
                </TableRow>
                <TableRow  android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/seatSlide"
                        android:layout_weight="2"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner
                        android:id="@+id/seatSlide_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"
                        android:tag="seatSlide"/>
                </TableRow>
                <TableRow  android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ecu"
                        android:layout_weight="2"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner
                        android:id="@+id/ecu_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"
                        android:tag="ecu"/>
                </TableRow>
                <TableRow  android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/roof"
                        android:layout_weight="2"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner
                        android:id="@+id/roof_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"
                        android:tag="roof"/>
                </TableRow>
                <TableRow  android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/discBox"
                        android:layout_weight="2"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner
                        android:id="@+id/discBox_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"
                        android:tag="discBox"/>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@string/tire" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="#C74810"/>

                <TableRow android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tireFormatMatch"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner android:id="@+id/formatMatch_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tire"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"/>
                </TableRow>
                <TableRow android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tirePatternMatch"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner android:id="@+id/patternMatch_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tire"
                        android:entries="@array/yesornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"/>
                </TableRow>
                <TableRow android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/spareTire"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <Spinner android:id="@+id/spareTire_spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:entries="@array/existornot"
                        android:popupBackground="@drawable/spinner_bg"
                        android:background="@drawable/spinner_selector"/>
                </TableRow>

                <CheckBox android:id="@+id/numbersSame"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"
                    android:text="四轮标号相同（勾选此项并填写左前轮标号，四轮标号将同时更改）"/>

                <RelativeLayout android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <ImageView android:id="@+id/tire_image"
                        android:layout_width="300dp"
                        android:layout_height="421dp"
                        android:layout_centerHorizontal="true"
                        android:alpha="0.5"/>

                    <EditText android:id="@+id/leftFront_edit"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_toLeftOf="@+id/tire_image"
                        android:maxLength="4"
                        android:inputType="number"
                        android:layout_marginTop="75dp"
                        android:background="@drawable/edittext_border"
                        android:paddingLeft="10dp"/>

                    <Button android:id="@+id/leftFront_button"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_toRightOf="@id/leftFront_edit"
                        android:layout_alignTop="@id/leftFront_edit"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="7dp"
                        android:tag="leftFront|左前轮"
                        android:background="@drawable/button_tire"/>

                    <EditText android:id="@+id/rightFront_edit"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@+id/tire_image"
                        android:maxLength="4"
                        android:inputType="number"
                        android:layout_marginTop="75dp"
                        android:background="@drawable/edittext_border"
                        android:paddingLeft="10dp"/>

                    <Button android:id="@+id/rightFront_button"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_toLeftOf="@id/rightFront_edit"
                        android:layout_alignTop="@id/rightFront_edit"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="7dp"
                        android:tag="rightFront|右前轮"
                        android:background="@drawable/button_tire"/>

                    <EditText android:id="@+id/leftRear_edit"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_toLeftOf="@+id/tire_image"
                        android:layout_alignBottom="@id/tire_image"
                        android:maxLength="4"
                        android:inputType="number"
                        android:layout_marginBottom="106dp"
                        android:background="@drawable/edittext_border"
                        android:paddingLeft="10dp"/>

                    <Button android:id="@+id/leftRear_button"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_toRightOf="@id/leftRear_edit"
                        android:layout_alignTop="@id/leftRear_edit"
                        android:tag="leftRear|左后轮"
                        android:background="@drawable/button_tire"/>

                    <EditText android:id="@+id/rightRear_edit"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@+id/tire_image"
                        android:layout_alignBottom="@id/tire_image"
                        android:maxLength="4"
                        android:inputType="number"
                        android:layout_marginBottom="106dp"
                        android:background="@drawable/edittext_border"
                        android:paddingLeft="10dp"/>

                    <Button android:id="@+id/rightRear_button"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_toLeftOf="@id/rightRear_edit"
                        android:layout_alignTop="@id/rightRear_edit"
                        android:tag="rightRear|右后轮"
                        android:background="@drawable/button_tire"/>

                    <EditText android:id="@+id/spare_edit"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tire_image"
                        android:maxLength="4"
                        android:inputType="number"
                        android:background="@drawable/edittext_border"
                        android:paddingLeft="10dp"/>

                    <Button android:id="@+id/spare_button"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:layout_above="@id/spare_edit"
                        android:layout_centerHorizontal="true"
                        android:tag="spare|备胎轮"
                        android:background="@drawable/button_tire"/>
                </RelativeLayout>

                <TableRow android:layout_marginTop="5dp">
                    <TextView android:id="@+id/fo"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/it2_comment"
                        android:layout_weight="3"
                        android:textSize="22sp"
                        android:textColor="#555"
                        android:textStyle="bold"
                        android:gravity="right"/>
                    <EditText
                        android:id="@+id/it2_comment_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:inputType="textMultiLine"
                        android:minHeight="40dp"
                        android:ems="10"
                        android:layout_margin="5dp"
                        android:background="@drawable/edittext_border"
                        android:paddingLeft="10dp"/>
                    <Button android:id="@+id/speech_button"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:background="@drawable/speech"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"/>
                </TableRow>

                <View android:id="@+id/placeHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:visibility="gone"/>
            </TableLayout>
        </LinearLayout>

    </com.df.library.util.MyScrollView>
</LinearLayout>