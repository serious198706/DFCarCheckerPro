<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ads_pop_menu_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/border"
              android:layout_margin="20dip"
              android:layout_gravity="center">
    <FrameLayout 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="8dp">
        <ImageView android:id="@+id/ads_pop_menu_title_image"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:adjustViewBounds="true"
              android:maxHeight="48dp"
              android:src="@drawable/engine"/>
	    <TextView android:id="@+id/ads_pop_menu_title"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="8dip"
              android:gravity="center"
              android:textSize="32dip"
              android:textColor="#0BC5FA"
              />
    </FrameLayout>     
    <FrameLayout android:background="@drawable/black_gray"
              android:layout_width="fill_parent"
              android:layout_height="1dip"/>
    <ListView android:id="@+id/ads_pop_menu_list"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>
    <FrameLayout android:background="@drawable/black_gray"
              android:layout_width="fill_parent"
              android:layout_height="1dip"/>
    <LinearLayout android:id="@+id/ads_pop_menu_buttons"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:padding="10dp"
                  >
        <Button android:id="@+id/ads_pop_menu_btn_start"
                  android:layout_weight="1"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:textSize="20dp"
                  android:text="@string/start"
                   />
        <Button android:id="@+id/ads_pop_menu_btn_exit"
                  android:layout_weight="1"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:textSize="20dp"
                  android:text="@string/exit"
                  />
    </LinearLayout>
</LinearLayout>