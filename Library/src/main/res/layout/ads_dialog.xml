<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ads_dialog_root"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
	<FrameLayout android:layout_weight="2"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center"
	    android:padding="8dp">
        <ImageView android:id="@+id/ads_dialog_image"
                   android:adjustViewBounds="true"
                   android:maxHeight="64dp"
                   android:src="@drawable/message_man"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
		<TextView android:id="@+id/ads_dialog_title"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="8dip"
              android:textSize="32sp"
              android:gravity="center"
              android:textColor="#0BC5FA" />
	</FrameLayout>    
    <FrameLayout android:background="@drawable/black_gray"
              android:layout_width="fill_parent"
              android:layout_height="1dip"/>
	<LinearLayout android:layout_weight="1"
		android:layout_width="fill_parent"
       	android:layout_height="fill_parent"
       	android:orientation="vertical"
       	android:layout_gravity="center_vertical">
	   	<ScrollView android:id="@+id/ads_dialog_text_wrapper"
	       	android:layout_width="fill_parent"
           	android:layout_height="fill_parent"
           	android:layout_weight="1">
	    	<TextView android:id="@+id/ads_dialog_text"
	        	android:layout_width="fill_parent"
	          	android:layout_height="fill_parent"
	          	android:paddingLeft="20dip"
	           	android:textSize="20dip"
	           	android:textColor="#FFF" />
		</ScrollView>
		<EditText android:id="@+id/ads_dialog_input"
	    	android:layout_weight="3"
	       	android:layout_width="fill_parent"
	       	android:layout_height="fill_parent"
	       	android:singleLine="true"
	       	android:gravity="center"
	       	android:visibility="gone"
	       	android:padding="0dp"
	       	android:textSize="22dip"
	       	android:imeOptions="actionDone"
	       	android:selectAllOnFocus="true"
	       	android:layout_marginLeft ="20dp"
	       	android:layout_marginRight ="20dp"
	       	android:textColor="#F00" />
	</LinearLayout>
	<LinearLayout android:id="@+id/ads_dialog_buttons"
		android:orientation="horizontal"
	    android:layout_weight="2"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="8dp" >
	    <Button android:id="@+id/ads_dialog_btn_ok"
	    	android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:padding="0dp"
	        android:textSize="20dp"
	        android:text="@string/confirm" />
	    <Button android:id="@+id/ads_dialog_btn_cancel"
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	        android:padding="0dp"
	        android:textSize="20dp"
	        android:text="@string/cancel" />
	</LinearLayout>
</LinearLayout>