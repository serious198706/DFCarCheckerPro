<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/brandText"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="24sp"
                  android:textStyle="bold"
                  android:text="1123"
                  android:layout_centerInParent="true"/>
        <Button android:id="@+id/loadSettingsButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/load_settings"/>
    </RelativeLayout>

    <ScrollView android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
        <TableLayout android:id="@+id/bi_content_table"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
            <TableRow >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/displacement"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/displacement_edit"
                    android:layout_height="40dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:editable="false"
                    android:background="@drawable/edittext_border"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/driveType"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/driveType_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:entries="@array/driveType_item"
                    android:popupBackground="@drawable/spinner_dropdown"
                    android:background="@drawable/spinner_selector"
                    android:dropDownVerticalOffset="2dp"/>
            </TableRow>
            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/transmission"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/transmission_edit"
                    android:layout_height="40dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:editable="false"
                    android:background="@drawable/edittext_border"
                    android:paddingLeft="10dp"/>
                <Spinner
                    android:id="@+id/transmission_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:entries="@array/transmission_item"
                    android:popupBackground="@drawable/spinner_bg"
                android:background="@drawable/spinner_selector"
                android:visibility="gone"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/airBag"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/airBag_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:entries="@array/airbag_number"
                    android:popupBackground="@drawable/spinner_dropdown"
                    android:background="@drawable/spinner_selector"/>
            </TableRow>

            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/abs"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/abs_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:entries="@array/existornot"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/powerSteering"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/powerSteering_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:entries="@array/existornot"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
            </TableRow>

            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/powerWindows"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/powerWindows_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:entries="@array/powerWindows_items"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/sunroof"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/sunroof_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:entries="@array/sunroof_items"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
            </TableRow>

            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/airConditioning"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/airConditioning_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:entries="@array/airConditioning_items"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/leatherSeats"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/leatherSeats_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:entries="@array/leatherSeats_items"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
            </TableRow>

            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/powerSeats"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/powerSeats_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:entries="@array/powerSeats_items"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/powerMirror"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/powerMirror_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:entries="@array/powerMirror_items"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
            </TableRow>

            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/reversingRadar"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/reversingRadar_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:entries="@array/reversingRadar_items"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/reversingCamera"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/reversingCamera_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:entries="@array/reversingCamera_items"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
            </TableRow>

            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/ccs"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/ccs_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:entries="@array/ccs_items"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/softCloseDoors"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/softCloseDoors_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:entries="@array/existornot"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
            </TableRow>

            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/rearPowerSeats"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/rearPowerSeats_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:entries="@array/existornot"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/ahc"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/ahc_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:entries="@array/existornot"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
            </TableRow>

            <TableRow android:layout_marginTop="15dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/parkAssist"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/parkAssist_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:entries="@array/existornot"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="@string/clapBoard"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:textSize="22sp"
                    android:textColor="#555"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/clapboard_spinner"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:entries="@array/existornot"
                    android:popupBackground="@drawable/spinner_bg"
                    android:background="@drawable/spinner_selector"/>
            </TableRow>
            <!-- 隐藏配置信息结束 -->
        </TableLayout>
    </ScrollView>

</LinearLayout>