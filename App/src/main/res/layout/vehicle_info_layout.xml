<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow  android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/licenseModel"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="#555"
            android:textStyle="bold"
            android:gravity="right"/>
        <EditText
            android:id="@+id/licenseModel_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:enabled="false"
            android:background="@drawable/edittext_border"
            android:paddingLeft="10dp"/>
    </TableRow>
    <TableRow  android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vehicleType"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="#555"
            android:textStyle="bold"
            android:gravity="right"/>
        <EditText
            android:id="@+id/vehicleType_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:enabled="false"
            android:background="@drawable/edittext_border"
            android:paddingLeft="10dp"/>
    </TableRow>
    <TableRow  android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/regDate"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="#555"
            android:textStyle="bold"
            android:gravity="right"/>
        <EditText
            android:id="@+id/regDate_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:enabled="false"
            android:background="@drawable/edittext_border"
            android:paddingLeft="10dp"/>
    </TableRow>
    <TableRow  android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/builtDate"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="#555"
            android:textStyle="bold"
            android:gravity="right"/>
        <EditText
            android:id="@+id/builtDate_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:enabled="false"
            android:background="@drawable/edittext_border"
            android:paddingLeft="10dp"/>
    </TableRow>
    <TableRow  android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/plateNumber"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="#555"
            android:textStyle="bold"
            android:gravity="right"/>
        <EditText
            android:id="@+id/plateNumber_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:enabled="false"
            android:background="@drawable/edittext_border"
            android:paddingLeft="10dp"/>
    </TableRow>
    <TableRow  android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/exteriorColor"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="#555"
            android:textStyle="bold"
            android:gravity="right"/>
        <EditText
            android:id="@+id/exteriorColor_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:enabled="false"
            android:background="@drawable/edittext_border"
            android:paddingLeft="10dp"/>
    </TableRow>
    <TableRow  android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mileage"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="#555"
            android:textStyle="bold"
            android:gravity="right"/>
        <EditText
            android:id="@+id/mileage_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:enabled="false"
            android:background="@drawable/edittext_border"
            android:paddingLeft="10dp"/>
    </TableRow>
    <TableRow  android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/vin"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="#555"
            android:textStyle="bold"
            android:gravity="right"/>
        <EditText
            android:id="@+id/vin_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:enabled="false"
            android:background="@drawable/edittext_border"
            android:paddingLeft="10dp"/>
    </TableRow>
    <TableRow  android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/engineSerial"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textColor="#555"
            android:textStyle="bold"
            android:gravity="right"/>
        <EditText
            android:id="@+id/engineSerial_edit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:enabled="false"
            android:background="@drawable/edittext_border"
            android:paddingLeft="10dp"/>
    </TableRow>
    <TableRow  android:layout_marginTop="10dp">
        <TextView android:layout_height="40dp"
                  android:layout_width="0dp"
                  android:layout_margin="5dp"
                  android:layout_weight="2"
                  android:text="@string/brand"
                  android:textSize="22sp"
                  android:textColor="#555"
                  android:textStyle="bold"
                  android:gravity="right"/>
        <EditText android:id="@+id/brand_edit"
                  android:layout_width="0dp"
                  android:layout_height="40dp"
                  android:layout_weight="3"
                  android:layout_marginLeft="-4dp"
                  android:layout_marginRight="5dp"
                  android:enabled="false"
                  android:background="@drawable/edittext_border"
                  android:paddingLeft="10dp"/>
        <Button android:id="@+id/brand_select_button"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="@string/choose"
                android:background="@drawable/button_custom"
                android:padding="-5dp"
                android:textColor="#FFF"/>
    </TableRow>
</TableLayout>