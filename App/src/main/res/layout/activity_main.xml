<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

        <Button android:id="@+id/buttonInputProcedures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_input_procedures"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="85dp"/>
        <Button android:id="@+id/buttonCarsWaiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:background="@drawable/button_cars_waiting"
            android:layout_marginBottom="145dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-12dp"/>
        <Button android:id="@+id/buttonCarsChecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:background="@drawable/button_cars_checked"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="362dp"/>
        <Button android:id="@+id/buttonQuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_exit"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"/>

</RelativeLayout>
